local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local window = lib.CreateLib("Sistema de Key", "DarkTheme")

local Main = window:NewTab("Pegar Key")
local Section = Main:NewSection("Key")

_G.Key = "nothing yet"
_G.CheckedKey = false

Section:NewButton("Copiar Link", function()
    setclipboard("https://gateway.platoboost.com/a/83268?id=") -- Add your key link
end)

Section:NewButton("Copiar Chave do Link", function()
    setclipboard(game:GetService("RbxAnalyticsService"):GetClientId()) -- Add your key link
end)

local KeyLabel = Section:NewLabel("Key 1 | ".. _G.Key)
local KeyInput = Section:NewTextBox("Key", "Key",
    function(txt)
        KeyLabel:UpdateLabel("Key > " .. txt)
        _G.Key = txt
        CheckKey()
    end)

local OutputLabel = Section:NewLabel("")  

_G.CheckKey = function()
    if _G.CheckedKey then
        return
    end

    local key = game:HttpGet("URL_DO_SEU_SERVIDOR_AQUI") -- Insira a URL correta aqui
    if key == "False" then
        OutputLabel:UpdateLabel("Key Errada")
        return
    end

    _G.CheckedKey = true
    local script = loadstring(game:HttpGet("https://raw.githubusercontent.com/LuresScript/Lures/refs/heads/main/Script"))()
end
